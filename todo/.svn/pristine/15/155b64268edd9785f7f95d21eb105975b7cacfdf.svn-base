.ca-nav span:hover{
    opacity:1.0;
    -webkit-opacity:1.0;
    -moz-opacity: 1.0;
    -o-opacity: 1.0;
    -ms-opacity: 1.0;
    filter: alpha(opacity=100);
}

.ca-item-main {
    position: absolute;
    top: 5px;
    left: 5px;
    right: 5px;
    bottom: 5px;
    overflow: hidden;
}

.form-control{
    margin-top: 5px;
}

@media screen and (min-width: 360px) and (max-width: 1600px) {
