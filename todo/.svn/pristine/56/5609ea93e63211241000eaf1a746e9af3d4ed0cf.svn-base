<!-- author zm-->
<extend name="Public:frameset" />
<block name="style">
    <link href="__PUBLIC__/assets/pages/styles/backwards.css" rel="stylesheet" type="text/css"/>
</block>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<!-- BEGIN PAGE-BODY -->
<block name="page-body">
    <div class="backwards">

        <div class="current-backward" data-id={$last['id']}>
            <div class="current-text"><empty name="last"><else/>距离{$last['name']|mb_substr='0,7,UTF-8'}..</empty></div>
            <div class="backward-day">{$last['b_days']}</div>
            <div class="current-text up"><empty name="last">无倒数<else/>天</empty></div>
        </div>

        <div id="ca-container" class="ca-container other-backwards ">
            <div class="ca-nav"><span class="ca-nav-prev"></span><span class="ca-nav-next"></span></div>
            <div class="ca-wrapper" style="overflow: hidden;">
               <volist name="b_info" id="vo">
                   <div class="ca-item">
                       <div class="calendar ca-item-main" data-id={$vo['id']}>
                           <div class="s-day"><empty name="vo"><i style="font-size: medium">暂无倒数</i><else/>{$vo['b_days']} <span>天</span></empty></div>
                           <div class="s-text"><p>{$vo['name']|mb_substr='0,7,UTF-8'}</p></div>
                       </div>
                   </div>
               </volist>
            </div>
        </div>
        <div class="add-btn">
            <a href="javascript:;"><img src="__PUBLIC__/assets/pages/img/backwards/chick-add.png" alt="" ondragstart="return false"/></a>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">土豆鸡快-倒数日</h4>
                    </div>
                    <div id="tip"></div>
                    <div class="modal-body">
                        <form action="">
                            <div class="form-group">
                                <input type="hidden" name="id" id="edit_id"/>
                                <lable for="name">倒数事项</lable><input id="name" class="form-control" name="name" type="text" placeholder="不多于7个字最优"/>
                            </div>
                            <div class="form-group">
                                <lable for="remark">备注</lable>
                                <textarea class="form-control" name="remark" id="remark" cols="30" rows="10"></textarea>
                            </div>
                            <div class="form-group">
                                <lable for="deadline">到期时间</lable><input id="deadline" class="form-control" name="deadline" type="text" placeholder="点击选择" onfocus="WdatePicker({dateFmt:'yyyy-M-d H:mm:ss'})"/>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" id="btn-confirm">确定</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


</block>
<!-- END PAGE-BODY -->
<!-- BEGIN PAGE LEVEL SCRIPTS -->
<block name="script">
    <script src="__PUBLIC__/assets/global/plugins/jquery.easing.1.3.js" type="text/javascript"></script>
    <script src="__PUBLIC__/assets/global/plugins/My97DatePicker/WdatePicker.js" type="text/javascript"></script>
    <script src="__PUBLIC__/assets/pages/scripts/backwards.js" type="text/javascript"></script>
</block>
<!-- END PAGE LEVEL SCRIPTS -->
<block name="script-init">

</block>